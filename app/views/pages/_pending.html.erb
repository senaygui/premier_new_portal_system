<div class="col-12">
  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">
        <i class="fas fa-info-circle mr-2"></i>
        <strong>Instruction</strong>
      </h3>
      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse">
          <i class="fas fa-minus"></i>
        </button>
        <button type="button" class="btn btn-tool" data-card-widget="remove">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <p class="text-center">
        <%if registrar && finance%>
          <strong class="text-blue">Please wait until the registrar and finance approves your status.</strong>
        <%elsif finance%>
          <strong class="text-blue">Please wait until the finance approves your status.</strong>
        <%else%>
          <strong class="text-blue">Please wait until the registrar approves your status.</strong>
        <%end%>
      </p>
    </div>
    <!-- /.card-body -->
  </div>
</div>
